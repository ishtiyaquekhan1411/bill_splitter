%h1.text-center.mt-4 Sign up for SplitBill
.container
  .row.justify-content-center
    .col-10
      = render 'shared/errors', obj: @user
      = form_with(model: @user, url: users_signup_path, class: 'shadow p-3 mb-3 bg-info rounded', local:true)  do |f|
        .form-group.row
          = f.label :name, class: 'col-2 col-form-label text-light'
          .col-10
            = f.text_field :name, class: 'form-control shadow rounded' , placeholder: 'Enter a name'
        .form-group.row
          = f.label :email, class: 'col-2 col-form-label text-light'
          .col-10
            = f.email_field :email, class: 'form-control shadow rounded', placeholder: 'Enter your email address'
        .form-group.row
          = f.label :password, class: 'col-2 col-form-label text-light'
          .col-10
            = f.password_field :password, class: 'form-control shadow rounded', placeholder: 'Choose a Password'
        .form-group.row.justify-content-center
          = f.submit(@user.new_record? ? 'Sign Up' : 'Update Profile', class: 'btn btn-outline-light btn-lg')
    = link_to '[ Cancel and return to Home Page ]', root_path, class: 'text-info'
