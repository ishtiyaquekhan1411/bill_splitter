.container
  .row.justify-content-center
    .col-10
      = render 'shared/errors', obj: @membership
      = form_with(model: @membership, url: group_memberships_path(group_id: params[:group_id]), class: 'shadow p-3 mb-3 bg-info rounded', local:true)  do |f|
        .form-group.row
          = f.label :user_id, class: 'col-2 col-form-label text-light'
          .col-10
            = f.select :user_id, members_not_included_in_group(params[:group_id]), {}, { class: 'form form-group form-control' }
        .form-group.row.justify-content-center
          = f.submit t('general.submit'), class: 'btn btn-outline-light btn-lg'
    = link_to '[ Cancel and return to Membership listing ]', group_path(params[:group_id]), class: 'text-info'
